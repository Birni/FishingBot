<UserControl x:Class="InnerCore.Pages.Settings.Help"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="1. Ark auf dem Windows Haubtbildschirm starten" />
                <TextBlock Text="2. Die Auflösung in Ark auf 1920 × 1080 Pixel stellen" />
                <TextBlock Text="3. Ark auf rahmenloseren Fenstermodus stellen" />
                <TextBlock Text="4. Fishing Bot starten" />
